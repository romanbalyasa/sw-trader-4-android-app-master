<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/clients_list_item_header"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="@color/hint_of_red"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/concrete" />

        <TextView
            android:id="@+id/clients_list_header_text_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="26dp"
            android:background="@null"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black"
            android:textSize="24sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/clients_list_item_row"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/concrete" />

        <View
            android:id="@+id/clients_list_item_selector"
            android:layout_width="9dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/red_title"
            android:visibility="gone" />

        <TextView
            android:id="@+id/clients_list_item_percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="26dp"
            android:background="@null"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/red_title"
            android:textSize="19sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="23dp"
            android:layout_toRightOf="@id/clients_list_item_percentage">

            <TextView
                android:id="@+id/clients_list_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:ellipsize="end"
                android:fontFamily="sans-serif"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/black"
                android:textSize="19sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/clients_list_item_debt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/clients_list_item_title"
                android:layout_marginTop="6dp"
                android:background="@null"
                android:ellipsize="end"
                android:fontFamily="sans-serif-italic"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/client_list_subtitle"
                android:textSize="13sp" />
        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>