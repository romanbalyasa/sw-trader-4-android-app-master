<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="58dp"
    android:background="@drawable/group_item_selector"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/group_item_disclosure"
        android:layout_width="22dp"
        android:layout_height="28dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingRight="15dp"
        android:src="@drawable/disclosure_indicator"
        android:visibility="gone" />

    <TextView
        android:id="@+id/group_item_text_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/group_item_disclosure"
        android:ellipsize="end"
        android:fontFamily="sans-serif-light"
        android:gravity="center_vertical"
        android:minLines="1"
        android:paddingLeft="17dp"
        android:paddingRight="17dp"
        android:textColor="@color/catalog_item_title"
        android:textSize="18sp"
        android:textStyle="bold" />


</RelativeLayout>